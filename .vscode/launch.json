    //"program": "${workspaceRoot}/build/zbco2/zephyr/zephyr.elf",
    "version": "0.2.0",
    "configurations": [
        {
          "name": "Cortex-Debug Start",
          "cwd": "${workspaceRoot}",
          "executable": "${workspaceFolder}/build_ezurio_llvm/co2_nrf54l15/zephyr/zephyr.elf",
          "request": "launch",
          "type": "cortex-debug",
          "servertype": "jlink",
          "interface": "swd",
          "device": "cortex-m33",
          "rtos": "Zephyr",
          "runToMain": true,
          "preRestartCommands": [
            "enable breakpoint"
          ]
        },
        {
          "name": "Cortex-Debug Attach",
          "cwd": "${workspaceRoot}",
          "executable": "${workspaceFolder}/build_ezurio_llvm/co2_nrf54l15/zephyr/zephyr.elf",
          "request": "attach",
          "type": "cortex-debug",
          "servertype": "jlink",
          "interface": "swd",
          "device": "cortex-m33",
          "rtos": "Zephyr",
          "preRestartCommands": [
            "enable breakpoint"
          ]
        },
        {
            "name": "Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_ezurio_llvm/co2_nrf54l15/zephyr/zephyr.elf",
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "/home/theorlangur/ncs/toolchains/7cbc0036f4/opt/zephyr-sdk/arm-zephyr-eabi/bin/arm-zephyr-eabi-gdb",
            "miDebuggerServerAddress": "localhost:44477",
            "useExtendedRemote": true,
            "stopAtConnect": true,
            "stopAtEntry": true,
            "MIMode": "gdb"
        },
        {
            "name": "Launch OCD",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_ezurio/nrf54l15_zigbee/zephyr/zephyr.elf",
            "cwd": "${workspaceFolder}",
            "miDebuggerServerAddress": "localhost:3333",
            "useExtendedRemote": true,
            "stopAtConnect": true,
            "stopAtEntry": true,
            "MIMode": "gdb"
        },
        {
            "name": "Launch NRF",
            "type": "nrf-connect",
        }
    ]
}
